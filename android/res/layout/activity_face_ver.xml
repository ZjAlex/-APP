<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rankbj"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="org.tensorflow.demo.FaceActivity">

    <Button
        android:id="@+id/photo_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="485dp"
        android:text="选择图片" />

    <Button
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="544dp"
        android:text="清空图片" />

    <Button
        android:id="@+id/align_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="186dp"
        android:layout_marginTop="485dp"
        android:text="开始检测" />

    <TextView
        android:id="@+id/result_text_face"
        android:layout_width="123dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/photo_face"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="422dp"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/show_image_face1"
        android:layout_width="190dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/show_image_face2"
        android:layout_width="190dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/show_image_face3"
        android:layout_width="190dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="206dp" />

    <ImageView
        android:id="@+id/show_image_face4"
        android:layout_width="190dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="205dp" />





</RelativeLayout>