<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rankbj"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="org.tensorflow.demo.FaceClassifierActivity">

    <Button
        android:id="@+id/photo_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="494dp"
        android:text="选择图片" />

    <Button
        android:id="@+id/cls_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="218dp"
        android:layout_marginTop="494dp"
        android:text="开始识别" />

    <Button
        android:id="@+id/extrat_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="494dp"
        android:text="提取特征" />

    <Button
        android:id="@+id/clear_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="218dp"
        android:layout_marginTop="538dp"
        android:text="清空特征" />

    <Button
        android:id="@+id/save_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="538dp"
        android:text="存储特征" />

    <Button
        android:id="@+id/get_face_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="538dp"
        android:text="加载特征" />

    <TextView
        android:id="@+id/result_text_face_cls"
        android:layout_width="114dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/photo_face_cls"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="437dp"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/show_image_face1_cls"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/show_image_face2_cls"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="206dp" />

    <EditText
        android:id="@+id/edit_text_cls"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/photo_face_cls"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-485dp"
        android:layout_toEndOf="@+id/cls_face_cls"
        android:hint="输入名字" />


</RelativeLayout>